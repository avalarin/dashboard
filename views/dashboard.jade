      date-widget(params='title: "Дата и время",              color: "red",   format: "DD.MM.YYYY<br/>hh:mm",          source: new DateDataSource()')
      text-widget(params='title: "IP",           size: "2x1", color: "blue",  moreInfo: "from http://ipinfo.io/ip",  source: new SimpleGetDataSource({ url: "http://ipinfo.io/ip" })')
